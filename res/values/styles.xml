<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
	Base application theme, dependent on API level. This theme is replaced
	by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
    <style name="AppBaseTheme" parent="Theme.Sherlock">
        <!--
		Theme customizations available in newer API levels can go in
		res/values-vXX/styles.xml, while customizations related to
		backward-compatibility can go here.
		-->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="TextAppearance.Section.Title" parent="@style/TextAppearance.Sherlock">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="TextAppearance.Section.Subtitle" parent="@style/TextAppearance.Sherlock">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">14dp</item>
	</style>
	
    <style name="Widget.Divider.Horizontal" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/highlight</item>
    </style>
    
	<style name="PreviewButtonLayout">
	    <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
		<item name="android:orientation">vertical</item>
		<item name="android:padding">15dip</item>
	</style>
    <style name="PreviewButton">
		<item name="android:layout_width">40dip</item>
		<item name="android:layout_height">40dip</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:layout_weight">1</item>
		<item name="android:scaleType">fitCenter</item>
	    <item name="android:background">@null</item>
	</style>
</resources>