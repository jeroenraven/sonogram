<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
	Base application theme, dependent on API level. This theme is replaced
	by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
    <style name="AppBaseTheme" parent="Theme.Sherlock.NoActionBar">
        <!--
		Theme customizations available in newer API levels can go in
		res/values-vXX/styles.xml, while customizations related to
		backward-compatibility can go here.
		-->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

	<style name="PreviewButtonLayout">
	    <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
		<item name="android:orientation">vertical</item>
		<item name="android:padding">15dip</item>
	</style>
    <style name="PreviewButton">
		<item name="android:layout_width">40dip</item>
		<item name="android:layout_height">40dip</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:layout_weight">1</item>
		<item name="android:scaleType">fitCenter</item>
	    <item name="android:background">@null</item>
	</style>
</resources>