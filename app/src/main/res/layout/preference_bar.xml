<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:minWidth="76dp"
	android:background="@drawable/bg_header_pattern"
       android:orientation="vertical">
	<LinearLayout 
		style="@style/PreviewButtonLayout">
		<se.embargo.sonogram.widget.PreferenceButton 
			style="@style/PreviewButton"
			android:id="@+id/visualizationButton" 
			android:src="@drawable/ic_button_line_chart"
			android:contentDescription="@string/menu_option_visualization"/>
	</LinearLayout>
	<LinearLayout 
		style="@style/PreviewButtonLayout">
		<se.embargo.sonogram.widget.PreferenceButton 
			style="@style/PreviewButton"
			android:id="@+id/focusButton" 
			android:src="@drawable/ic_button_focus"
			android:contentDescription="@string/menu_option_focus"/>
	</LinearLayout>
	<LinearLayout 
		style="@style/PreviewButtonLayout">
		<se.embargo.sonogram.widget.PreferenceButton 
			style="@style/PreviewButton"
			android:id="@+id/editSettingsButton" 
			android:src="@drawable/ic_button_settings"
			android:contentDescription="@string/menu_option_settings"/>
	</LinearLayout>
</LinearLayout>
